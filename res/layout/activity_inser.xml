<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    tools:context="${packageName}.${activityClass}" >

    <FrameLayout style="@style/Widgets" >

        <RelativeLayout
            android:layout_width="359dp"
            android:layout_height="390dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="18dp"
            android:background="@color/WidgetInternalColor" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="top" >

                <ImageView
                    android:id="@+id/desengatado_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@drawable/btn_desengatada_inativo" />

                <ImageView
                    android:id="@+id/desengate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@drawable/btn_desengate_inativo" />

                <ImageView
                    android:id="@+id/engate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:src="@drawable/btn_engate_ativo" />
            </LinearLayout>

            <ImageView
                android:id="@+id/engate_fig"
                style="@style/KeysImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/chave_engate_centered" />

            <ImageView
                android:id="@+id/desengate_fig"
                style="@style/KeysImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.3"
                android:rotation="-85"
                android:src="@drawable/chave_engate_centered" />

            <ImageView
                android:id="@+id/desengatado_fig"
                style="@style/KeysImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.3"
                android:rotation="-130"
                android:src="@drawable/chave_engate_centered" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            style="@style/WidgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="POSIÇÕES DE CHAVE"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/BeamWidget"
        style="@style/Widgets"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="@style/WidgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VIGA PESCADORA"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="358dp"
            android:layout_height="214dp"
            android:background="@color/WidgetInternalColor"
            android:padding="20dp" >

            <FrameLayout
                android:id="@+id/relativelayoutgarra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/claw_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garra_esquerda_verde" />

                <ImageView
                    android:id="@+id/claw_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garra_direita_verde" />

                <ImageView
                    android:id="@+id/viga_pescadora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/viga_amarela" />
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/InductivesLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:divider="@drawable/linha"
                android:dividerPadding="1dp"
                android:gravity="center"
                android:showDividers="middle" >

                <LinearLayout
                    android:id="@+id/LinearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/carregando"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="GARRA ESQUERDA"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/inductive_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/contato_cinza"
                        android:tag="grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="GARRA DIREITA"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/inductive_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:scaleType="center"
                        android:src="@drawable/contato_cinza"
                        android:tag="grey" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearAngle"
        style="@style/Widgets"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            style="@style/WidgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="ALINHAMENTO"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <FrameLayout
            android:layout_width="358dp"
            android:layout_height="214dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/horizonte_inclinacao" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/marcas_inclinacao" />

            <View
                android:id="@+id/View3"
                android:layout_width="320dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="#FF41E020"
                android:tag="green" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </View>

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="174dp"
                android:layout_gravity="center"
                android:background="@color/WidgetInternalColor"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:text="INCLINAÇÃO"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0°"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#41E020"
                    android:textSize="48sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </View>

            <LinearLayout
                android:layout_width="174dp"
                android:layout_height="174dp"
                android:layout_gravity="center"
                android:background="@color/WidgetInternalColor"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center_horizontal"
                    android:text="PROFUNDIDADE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Profund_text"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="0 M"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/still_depth"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:scaleType="center"
                    android:src="@drawable/nada"
                    android:tag="empty"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </View>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
