        android:layout_row="0"
        android:padding="5dp"
        android:src="@drawable/corpo_regua" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
