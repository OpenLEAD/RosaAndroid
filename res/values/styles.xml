<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="mbstyle">
        <item name="android:layout_margin">11dp</item>
        <item name="android:background">@drawable/mbuttonbg</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingBottom">43dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
    </style>
    <style name="ButtonIcon">
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="Widgets">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/widget_grad</item>
        <item name="android:layout_width">389dp</item>
        <item name="android:layout_height">478dp</item>
    </style>
    <color name="WidgetBgColor">#A1A8AB</color>
    <color name="WidgetInternalColor">#525758</color>
    <color name="white">#FFFFFF</color>
    <style name="WidgetTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="KeysImage">
        <item name="android:layout_marginBottom">40dp</item>
    </style>
    <color name="warningRed">#FFFF4444</color>

</resources>
